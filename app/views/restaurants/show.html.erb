<h1><%= @restaurant.name %></h1>
<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
<p><strong>Category:</strong> <%= @restaurant.category %></p>

<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <strong>Rating:</strong> <%= review.rating %>
      <p><%= review.content %></p>
    </li>
  <% end %>
</ul>

<h2>Add a Review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, label: "Your Review" %>
  <%= f.input :rating, label: "Rating (0-5)", in: 0..5 %>
  <%= f.submit "Submit Review", class: "btn btn-success" %>
<% end %>

<%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-secondary" %>
